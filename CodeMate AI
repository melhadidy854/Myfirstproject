from flask import Flask, request, jsonify
import openai

app = Flask(__name__)

# Ø¶Ø¹ Ù…ÙØªØ§Ø­ OpenAI API Ù‡Ù†Ø§
openai.api_key = "YOUR_OPENAI_API_KEY"

@app.route("/process_code", methods=["POST"])
def process_code():
    data = request.json
    user_code = data.get("code", "")

    if not user_code:
        return jsonify({"error": "No code provided!"}), 400

    # Ø¥Ø±Ø³Ø§Ù„ Ø§Ù„ÙƒÙˆØ¯ Ø¥Ù„Ù‰ Ù†Ù…ÙˆØ°Ø¬ OpenAI Ù„Ù„Ø­ØµÙˆÙ„ Ø¹Ù„Ù‰ Ø´Ø±Ø­ Ø£Ùˆ ØªØµØ­ÙŠØ­
    response = openai.ChatCompletion.create(
        model="gpt-4",
        messages=[
            {"role": "system", "content": "You are a helpful AI assistant that explains and fixes code."},
            {"role": "user", "content": f"Please analyze and fix this code:\n{user_code}"}
        ]
    )

    ai_response = response["choices"][0]["message"]["content"]

    return jsonify({"output": ai_response})

if __name__ == "__main__":
    app.run(debug=True)

