document.getElementById("sendBtn").addEventListener("click", async function() {
    let code = document.getElementById("codeInput").value;
    let chatBox = document.getElementById("chatBox");
    let outputBox = document.getElementById("outputBox");

    if (code.trim() === "") {
        alert("Please enter some code first!");
        return;
    }

    chatBox.innerHTML += `<p>ğŸ‘¤ You: ${code}</p>`;
    outputBox.innerHTML += `<p>ğŸ¤– AI: Processing your code...</p>`;

    try {
        let response = await fetch("http://127.0.0.1:5000/process_code", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ code: code })
        });

        let result = await response.json();
        outputBox.innerHTML += `<p>âœ… AI Response: ${result.output}</p>`;
    } catch (error) {
        outputBox.innerHTML += `<p>âŒ Error: Failed to connect to AI.</p>`;
    }
});